{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
